  <em class="info"><%= l(:redmine_cas_settings_hide_local_login_helptext).html_safe %></em>
</p>
<p>
  <%= label_tag "settings[cas_button_text]", l(:redmine_cas_settings_cas_button_text_label) %>
  <%= text_field_tag "settings[cas_button_text]", @settings[:cas_button_text], :size => 255 %>
  <em class="info"><%= l(:redmine_cas_settings_cas_button_text_helptext).html_safe %></em>
</p>
<p>
  <%= label_tag "settings[cas_between_text]", l(:redmine_cas_settings_cas_between_text_label) %>
  <%= text_field_tag "settings[cas_between_text]", @settings[:cas_between_text], :size => 255 %>
</p>